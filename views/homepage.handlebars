<!-- Loop over each object in the projects array -->
{{#each Blogs as |Blog| }}
<div class="col mb-4 project">
  <div class="col-md-5">
    <h2>
      <!-- Call helper function with triple brackets to render the emoji span as HTML -->
      <a href="/blog/{{Blog.id}}">{{Blog.title}}</a>
    </h2>
    <p>Created by {{user.name}} on {{format_date Blog.createdAt}}</p>
  </div>
  <div class="col-md-7">
    <p>
      {{Blog.description}}
    </p>
  </div>
</div>
{{/each}}
